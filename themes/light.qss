DayCellWidget[isCurrentMonth="false"] QLabel {
    color: #A0AEC0;
}

DayCellWidget[isToday="true"] QLabel {
    border: 2px solid #3182CE;
    border-radius: 13px;
}

DayCellWidget[isSelected="true"] QLabel {
    background-color: #3182CE;
    color: white;
    border-radius: 13px;
}

